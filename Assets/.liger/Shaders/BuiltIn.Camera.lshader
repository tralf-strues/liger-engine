Data: | #glsl
  struct Camera {
    f32mat4   view;
    f32mat4   proj;
    f32vec3   ws_position;
    float32_t near;
    float32_t far;
  };

Input:
  - Name: CameraData
    Type: uniform-buffer
    Contents: | #glsl
      Camera camera;

CodeSnippet:
  Insert: auto-global
  Code: | #glsl
    Camera GetCamera(LigerInput liger_in) {
      return GetUniformBuffer(CameraData, liger_in.binding_camera_data).camera;
    }
